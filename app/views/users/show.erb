<div class="red"><%= error %></div>
<%= show_reviews %>


<% @user.reviews.each do |t| %>
<br><h2><%= t.title %></h2><br>
<div class="content">
<%= t.content %></div><br><br>
<% if t.user == current_user %>
  <%= link_to "Edit Review", edit_review_path(t)%>
<% end %>
<br><br><br><br>
<% if t.comments.blank? %>
<p>There aren't any Comments for the <%=t.title%> yet. Add a comment <%= link_to "here", new_review_comment_path(t) %></p>
<% else %>
<%= link_to "See all comments, including for the #{t.title}", comments_path%>
<br><br>
<% end %>
<% end %>








