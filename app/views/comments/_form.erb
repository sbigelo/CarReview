<%= form_for([@comment.review, @comment]) do |t| %>
<% if !@comment.review %>
<%= t.label :review, "Review: " %>
<%= t.collection_select :review_id, Review.all, :id, :title %>
<% else %>
<%= t.hidden_field :review_id %>
<% end %>
<br><br>
<%= t.label :content, "Comment:" %>
<%= t.text_area :content %>
<br>
<%= t.submit "Submit Comment" %>


<% end %>