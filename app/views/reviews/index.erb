<% else %>

<table>
<tbody>
<% @reviews.each do |t|%>
<tr>
<td><%= link_to t.title, review_path(t) %></td>
<td> </td>
<td> </td>
<td> </td>
<td> </td>
<td>By: <%= link_to t.user.username, user_path(t.user) %></td>
</tr>


<% end %>
<% end %>
</tbody>
</table>
